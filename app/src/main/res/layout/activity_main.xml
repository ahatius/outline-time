<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.outline.time.android.activities.MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="500px"
        android:text="@string/stamp"
        android:id="@+id/stampButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewSwitcher"
        android:layout_below="@+id/stampButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/currentBalance"
        android:id="@+id/currentBalanceLabel"
        android:layout_alignBottom="@+id/viewSwitcher"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentBalanceValue"
        android:layout_below="@+id/viewSwitcher"
        android:layout_alignEnd="@+id/currentBalanceLabel" />

</RelativeLayout>
